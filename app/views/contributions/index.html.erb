  <div class="row-fluid">
<h1>Listing contributions</h1>
 <div class="span12">
      <div class="span11">
        <table class="table table-hover">
          <thead class="unstyled inline">
  <tr>
    <th>Amount</th>
    <th>Initiative</th>
    <th>Committee</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 </thead>
<% @contributions.each do |contribution| %>
<tbody class="unstyled inline">
  <tr>
    <td><%= contribution.amount %></td>
    <td><%= contribution.initiative.name %></td>
    <td><%= contribution.committee.name %></td>
    <td><%= link_to 'Show', contribution %></td>
    <td><%= link_to 'Edit', edit_contribution_path(contribution) %></td>
    <td><%= link_to 'Destroy', contribution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
        </table>
      </div>
    </div>
  <span class="btn btn-primary"><%= link_to 'New Contribution', new_contribution_path %></span>
  </div>
