<%= form_for(@contribution) do |f| %>
  <% if @contribution.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contribution.errors.count, "error") %> prohibited this contribution from being saved:</h2>

      <ul>
      <% @contribution.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :amount %><br />
    <%= f.number_field :amount %>
  </div>
  <div class="field">
          <div class="control-group">
            <%= f.label :initiative_id, "Select an Initiative for this contribution", :class => 'control-label' %>
            <div class="controls">
              <%= f.collection_select :initiative_id, Initiative.all, :id, :name %>
            </div>
          </div>
    </div>
    <div class="field">
          <div class="control-group">
            <%= f.label :committee_id, "Select a Committee for this contribution", :class => 'control-label' %>
            <div class="controls">
              <%= f.collection_select :committee_id, Committee.all, :id, :name %>
            </div>
          </div>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
