  <div class="row-fluid">
<h1>Listing Officials</h1>
 <div class="span12">
      <div class="span11">
        <table class="table table-hover">
          <thead class="unstyled inline">
  <tr>
    <th>Person</th>
    <th>Office</th>
    <th>Political Committee(s)</th>
    <th>Duties</th>
    <th>Issue(s)</th>
    <th>Term begin</th>
    <th>Term end</th>
    <th>Term limit</th>
    <th>Next election</th>
    <th>Firm(s)</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 </thead>
<% @officials.each do |official| %>
 <tbody class="unstyled inline">
  <tr>
    <td><%= official.person.name %></td>
    <td><%= official.office %></td>
    <td><%= official.politicalcommittee.name %></td>
    <td><%= official.duties %></td>
    <td><%= official.issue.name %></td>
    <td><%= official.term_begin %></td>
    <td><%= official.term_end %></td>
    <td><%= official.term_limit %></td>
    <td><%= official.next_election %></td>
    <td><%= official.firm_id %></td>
    <td><%= link_to 'Show', official %></td>
    <td><%= link_to 'Edit', edit_official_path(official) %></td>
    <td><%= link_to 'Destroy', official, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
        </table>
      </div>
    </div>
  <span class="btn btn-primary"><%= link_to 'New Official', new_official_path %></span>
  </div>
