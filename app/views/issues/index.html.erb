  <div class="row-fluid">
<h1>Listing issues</h1>
  <div class="span12">
      <div class="span11">
        <table class="table table-hover">
          <thead class="unstyled inline">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
<% @issues.each do |issue| %>
<tbody class="unstyled inline">
  <tr>
    <td><%= issue.name %></td>
    <td><%= link_to 'Show', issue %></td>
    <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
    <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
 </tbody>
        </table>
      </div>
    </div>
  <span class="btn btn-primary"><%= link_to 'New Issue', new_issue_path %></span>
  </div>
