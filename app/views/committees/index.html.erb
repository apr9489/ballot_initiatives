<div class="row-fluid">
<h1>Listing committees</h1>
<div class="span12">
      <div class="span11">
        <table class="table table-hover">
          <thead class="unstyled inline">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 </thead>
<% @committees.each do |committee| %>
<tbody class="unstyled inline">
  <tr>
    <td><%= committee.name %></td>
    <td><%= link_to 'Show', committee %></td>
    <td><%= link_to 'Edit', edit_committee_path(committee) %></td>
    <td><%= link_to 'Destroy', committee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
        </table>
      </div>
    </div>
  <span class="btn btn-primary"><%= link_to 'New Committee', new_committee_path %></span>
  </div>
